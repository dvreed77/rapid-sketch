{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "experimentalDecorators": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "ESNEXT",
      "DOM"
    ],
    "target": "ES5",
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "module.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/examples/**/*"
  ]
}